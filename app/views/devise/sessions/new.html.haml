.form-all.rounded.px3.py2
  %h2 Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field-row
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, :class => 'field'
    .field-row
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "off", :class => 'field'
    - if devise_mapping.rememberable?
      .field-row
        = f.check_box :remember_me
        = f.label :remember_me
    .actions.center
      = f.submit "Log in", :class=>"btn btn-primary bg-green"
  .center.py2
    = render "devise/shared/links"
