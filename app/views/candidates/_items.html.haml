- candidates.each do |candidate|
  .clearfix.py1
    .col.col-3.px2
      = candidate.user.email
    .col.col-3.px2
      = candidate.event.project.title
    .col.col-3.px2
      Status
      %strong
        = candidate.status
    .right.px2
      %small
        = link_to '<span class="typcn typcn-delete-outline"></span> Decline'.html_safe, accept_trigger_event_candidate_path(@event, candidate, status: "decline"), method: :put, class: 'btn btn-outline red js-remove', remote: true
        = link_to '<span class="typcn typcn-tick"></span> Accept'.html_safe, accept_trigger_event_candidate_path(@event, candidate, status: "accept"), method: :put, class: 'btn btn-outline btn-primary bg-green', remote: true
