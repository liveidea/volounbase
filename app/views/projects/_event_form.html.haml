.field
  .field-row.field
    = event.label :note
    %br/
    = f.text_field :note, required: true
  .field-row.field
    = event.label :start_date
    %br/
    = f.text_area :start_date, required: true
  .field-row.field
    = event.label :end_date
    %br/
    = f.text_area :end_date, required: true
  .field-row.field
    = event.label :status
    %br/
    = f.select :status, options_for_select(Event::STATUSES), required: true
  %br/
  = event.text_field :name
  = event.check_box :_destroy
  = event.label :_destroy, 'remove'