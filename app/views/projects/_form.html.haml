= form_for(@project) do |f|
  - if @project.errors.any?
    #error_explanation
      %h2
        = pluralize(@project.errors.count, "error")
        prohibited this project from being saved:
      %ul
        - @project.errors.full_messages.each do |message|
          %li= message
  .clearfix
    .col.col-4.px2
      .field-row
        = f.label :cover
        %br/
        %img{:alt => "", :src => @project.cover.url(:medium)}/
        %br/
        = f.file_field :cover, :class => "field"
    .col.col-6.px2
      .field-row
        = f.label :title
        %br/
        = f.text_field :title, :required => true, :class => "field"
      .field-row
        = f.label :description, :required => true
        %br/
        = f.text_area :description, :class => "field"
  .event_fields.py2
    %h3 Events
    = f.fields_for :events do |event|
      .py2
        .border.px2.rounded
          .clearfix
            .col.col-3
              .field-row
                = event.label :note
                %br/
                = event.text_field :note, required: true, :class => "field"
            .col.col-3
              .field-row
                = event.label :start_date
                %br/
                = event.text_field :start_date, required: true, :class => "field"
            .col.col-3
              .field-row
                = event.label :end_date
                %br/
                = event.text_field :end_date, required: true, :class => "field"
            .col.col-3
              .field-row
                = event.label :status
                %br/
                = event.select :status, options_for_select(Event::STATUSES), required: true
            %br/
            = event.check_box :_destroy
            = event.label :_destroy, 'remove'          
    
  .actions
    = f.submit :class => "btn btn-primary bg-green mb2"
